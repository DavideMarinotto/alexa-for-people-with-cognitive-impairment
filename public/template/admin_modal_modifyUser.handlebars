<div class="modal-dialog" role="document">
    <div class="modal-content">
        <div class="modal-header">
            <h5 class="modal-title">Modify this User</h5>
            <button type="button" class="close modalClose" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
        <div class="modal-body">
            <form action="#" id="id_modifyUserForm" method="post">
                <div class="form-group">
                    <label for="Name">Name:</label><br>
                    <input class="form-control" type="text" id="id_Name" name="name" value="{{Name}}"><br>
                    <label for="Surname">Surname:</label><br>
                    <input class="form-control" type="text" id="id_Surname" name="surname" value="{{Surname}}"><br>
                    <label for="Mail">Mail:</label><br>
                    <input class="form-control" type="email" id="id_Mail" name="email" value="{{Mail}}"><br>
                </div>
                <div class="modal-footer">
                    <button class="btn btn-primary sendModify"><i class="fas fa-user-edit"></i> Edit</button>
                    <button class="btn btn-secondary modalClose"> Cancel </button>
                </div>
            </form>
        </div>

    </div>
</div>
