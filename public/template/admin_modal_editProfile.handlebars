    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Edit Profile</h5>
                <button type="button" class="close modalClose" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form action="admin/profile" id="id_editProfileForm" method="post">
                    <div class="form-group">
                        <label for="Name">Name:</label><br>
                        <input class="form-control" type="text" id="id_Name" name="name" value="{{Name}}" required><br>
                        <label for="Surname">Surname:</label><br>
                        <input class="form-control" type="text" id="id_Surname" name="surname" value="{{Surname}}" required><br>
                        <label for="Mail">Mail:</label><br>
                        <input class="form-control" type="email" id="id_Mail" name="email" value="{{Mail}}" required><br>
                    </div>
                    <div class="modal-footer">
                        <button class="btn btn-primary editProfileBtn"><i class="fas fa-user-edit"></i> Edit Profile</button>
                        <button class="btn btn-danger resetPwBtn"><i class="fas fa-unlock-alt"></i> Reset Password </button>
                        <button class="btn btn-secondary modalClose">Cancel</button>
                    </div>
                </form>
            </div>

        </div>
    </div>
