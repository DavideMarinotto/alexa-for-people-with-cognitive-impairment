    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Create a New Alarm</h5>
                <button type="button" class="close modalClose" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form action="schedule/alarms" id="id_newAlarmForm" method="post">
                    <div class="form-group">
                        <label for="Name">Name:</label><br>
                        <input class="form-control" type="text" id="id_Name" name="name" ><br>
                        <label for="Surname">Message:</label><br>
                        <input class="form-control" type="text" id="id_Surname" name="surname" ><br>
                        <label for="pattern">Choose time pattern:</label><br>
                        <select id="id_pattern" name="pattern">
                            <option value="None">Select an option</option>
                            <option value="xMins">Every [X] Minutes</option>
                            <option value="xHours">Every [X] Hours</option>
                            <option value="everyDayAtX">Every Day at [XX]:[XX]</option>
                            <option value="onDayAtX">On [Sunday,Monday] at [XX]:[XX]</option>
                        </select>
                        <div id="id_xMins">
                            <label for="xMins">Minutes:</label>
                            <input class="form-control" type="text" id="id_xMinsInput" name="xMins" >
                        </div>
                        <div id="id_xHours">
                            <label for="xHours">Hours:</label>
                            <input class="form-control" type="text" id="id_xHoursInput" name="xHours" >
                        </div>
                        <div id="id_days">
                        <div class="form-check form-check-inline">
                            <input class="form-check-input" type="checkbox" id="id_sunday" value="sunday">
                            <label class="form-check-label" for="id_sunday">Sunday</label>
                        </div>
                        <div class="form-check form-check-inline">
                            <input class="form-check-input" type="checkbox" id="id_monday" value="monday">
                            <label class="form-check-label" for="inlineCheckbox2">Monday</label>
                        </div>
                        <div class="form-check form-check-inline">
                            <input class="form-check-input" type="checkbox" id="id_tuesday" value="tuesday">
                            <label class="form-check-label" for="id_sunday">Tuesday</label>
                        </div>
                        <div class="form-check form-check-inline">
                            <input class="form-check-input" type="checkbox" id="id_wednesday" value="wednesday">
                            <label class="form-check-label" for="inlineCheckbox2">Wednesday</label>
                        </div>
                        <div class="form-check form-check-inline">
                            <input class="form-check-input" type="checkbox" id="id_thursday" value="thursday">
                            <label class="form-check-label" for="id_thursday">Thursday</label>
                        </div>
                        <div class="form-check form-check-inline">
                            <input class="form-check-input" type="checkbox" id="id_friday" value="friday">
                            <label class="form-check-label" for="id_friday">Friday</label>
                        </div>
                        <div class="form-check form-check-inline">
                            <input class="form-check-input" type="checkbox" id="id_saturday" value="saturday">
                            <label class="form-check-label" for="id_saturday">Saturday</label>
                        </div>
                        </div>

                        <input type="hidden" id="id_cron" value="#">
                        <input type="hidden" id="id_cronString" value="#">

                    </div>

                    <div class="modal-footer">
                        <button type="submit" class="btn btn-primary"><i class="fas fa-user-plus"></i>  Create New Alarm</button>
                        <button class="btn btn-danger modalClose"> Cancel </button>
                    </div>
                </form>
            </div>

        </div>
    </div>
