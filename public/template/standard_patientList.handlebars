
<div class="row">
    <div class="col text-center">
        <h1 class="text-center">Patient List</h1>
    </div>
</div>
<div class="row">
    <div class="col mb-2">
        <button class="btn btn-primary" id="id_addPatientBtn"><i class="fas fa-user-plus"></i> Add New Patient</button>
        <button class="btn btn-outline-primary mr-2" id="id_exportBtn"><i class="fas fa-file-download"></i> Export Patients List</button>
    </div>
</div>
<div class="row bg-white rounded shadow-lg">
    <table class="table table-striped">
        <thead class="thead">
        <tr>
            <th>Patient name</th>
            <th>Operation</th>
            <th>Action</th>
        </tr>
        </thead>
        <tbody>
        {{#each this}}
        <tr idpatient="{{idpatient}}">
            <td>{{Name}} {{Surname}}</td>
            <td>
                <div class="btn-group" role="group">
                    <button type="button" class="btn btn-primary modifyPatientBtn"><i class="fas fa-pen"></i></button>
                    <button type="button" class="btn btn-danger removePatientBtn"><i class="fas fa-trash-alt"></i></button>
                </div>
            </td>
            <td><button type="button" class="btn btn-primary calendarBtn"><i class="fas fa-calendar"></i> Calendar</button>
           </td>
        </tr>
        {{/each}}
        </tbody>
    </table>
</div>

